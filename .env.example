# Blockchain Configuration
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/<YOUR_INFURA_PROJECT_ID>  # Replace <YOUR_INFURA_PROJECT_ID> with your Infura project ID
PRIVATE_KEY=<YOUR_WALLET_PRIVATE_KEY>                                # Replace with the private key of the pre-funded wallet
FAUCET_ADDRESS=<YOUR_WALLET_ADDRESS>                                 # Replace with the address of the pre-funded wallet

# Django Configuration
DJANGO_SECRET_KEY=<YOUR_SECRET_KEY>                                  # Replace with a secure random secret key
DJANGO_DEBUG=False                                                  # Set to True for local development, False for production
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost                            # Comma-separated list of allowed hosts

# Database Configuration
DATABASE_NAME=faucet_db
DATABASE_USER=faucet_user
DATABASE_PASSWORD=<YOUR_DATABASE_PASSWORD>                          # Replace with your database password
DATABASE_HOST=db                                                    # For Docker, use the service name as the host
DATABASE_PORT=5432

# Rate Limiting Configuration
RATE_LIMIT_TIMEOUT=60                                               # Time in seconds for rate-limiting requests
